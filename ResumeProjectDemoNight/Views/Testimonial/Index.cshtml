@model List<ResumeProjectDemoNight.Entities.Testimonial>
@{
    ViewData["Title"] = "Müşteri Yorumları";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 p-8">
    <div class="max-w-6xl mx-auto space-y-8">

        <div class="flex justify-between items-center">
            <div>
                <h3 class="text-2xl font-bold text-white">Müşteri Yorumları</h3>
                <p class="text-slate-400 text-sm">
                    Müşteri yorumlarını buradan yönetebilirsiniz.
                </p>
            </div>

            <a href="/Testimonial/Create"
               class="bg-primary px-5 py-2.5 rounded-xl font-bold text-white
                      shadow-lg shadow-primary/30">
                Yeni Yorum Ekle
            </a>
        </div>

        <div class="relative">
            <div class="absolute inset-0 bg-primary/20 blur-2xl rounded-2xl"></div>

            <div class="relative bg-card-dark border-2 border-primary rounded-2xl
                        shadow-[0_0_40px_rgba(255,140,0,0.35)] overflow-hidden">

                <table class="w-full text-left">
                    <thead class="bg-slate-900/60">
                        <tr>
                            <th class="px-6 py-4 text-slate-400">#</th>
                            <th class="px-6 py-4 text-slate-400">Ad Soyad</th>
                            <th class="px-6 py-4 text-slate-400">Ünvan</th>
                            <th class="px-6 py-4 text-slate-400">Yorum</th>
                            <th class="px-6 py-4 text-center text-slate-400">Sil</th>
                            <th class="px-6 py-4 text-center text-slate-400">Güncelle</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-white/5">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-white/5">
                                <td class="px-6 py-4">@item.TestimonialId</td>
                                <td class="px-6 py-4 text-white">@item.NameSurname</td>
                                <td class="px-6 py-4">@item.Title</td>
                                <td class="px-6 py-4 truncate max-w-md">@item.Comment</td>

                                <td class="px-6 py-4 text-center">
                                    <a href="/Testimonial/Delete/@item.TestimonialId"
                                       class="text-red-400 hover:text-red-300">
                                        <span class="material-symbols-outlined">delete</span>
                                    </a>
                                </td>

                                <td class="px-6 py-4 text-center">
                                    <a href="/Testimonial/Update/@item.TestimonialId"
                                       class="text-primary hover:text-orange-300">
                                        <span class="material-symbols-outlined">edit</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
