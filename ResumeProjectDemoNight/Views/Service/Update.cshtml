@model ResumeProjectDemoNight.Entities.Service

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Title"] = "Hizmet Güncelle";
}

<div class="flex justify-center">

    <div class="admin-card p-8 border border-primary/40 rounded-3xl max-w-2xl w-full">

        <h1 class="text-2xl font-bold text-white mb-8 text-center">
            Hizmet Güncelle
        </h1>

        @if (ViewBag.Error != null)
        {
            <div class="mb-6 p-4 rounded-xl bg-red-500/10 border border-red-500/30 text-red-400 text-sm text-center">
                @ViewBag.Error
            </div>
        }

        <form method="post" class="space-y-6">

            <input type="hidden" asp-for="ServiceId" />

            <div>
                <label class="text-slate-300 text-sm font-semibold block mb-2">
                    Hizmet Başlığı
                </label>
                <input asp-for="Title"
                       class="w-full px-5 py-3 rounded-xl bg-background-dark border border-white/10 text-white focus:ring-2 focus:ring-primary outline-none" />
            </div>

            <div>
                <label class="text-slate-300 text-sm font-semibold block mb-2">
                    Açıklama
                </label>
                <textarea asp-for="Description"
                          rows="4"
                          class="w-full px-5 py-3 rounded-xl bg-background-dark border border-white/10 text-white resize-none focus:ring-2 focus:ring-primary outline-none"></textarea>
            </div>

            <div>
                <label class="text-slate-300 text-sm font-semibold block mb-2">
                    Görsel URL
                </label>
                <input asp-for="ImageURL"
                       class="w-full px-5 py-3 rounded-xl bg-background-dark border border-white/10 text-white focus:ring-2 focus:ring-primary outline-none" />
            </div>

            <div class="pt-4 text-center">
                <button class="px-10 py-3 bg-primary text-white rounded-xl font-bold hover:opacity-90 transition">
                    Güncelle
                </button>
            </div>

        </form>

    </div>

</div>
