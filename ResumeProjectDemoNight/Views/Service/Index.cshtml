@model List<ResumeProjectDemoNight.Entities.Service>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Title"] = "Hizmetlerim";
}

<div class="admin-card p-8 border border-primary/40 rounded-3xl">

    <!-- HEADER -->
    <div class="flex justify-between items-center mb-10">
        <div>
            <h1 class="text-2xl font-bold text-white">Hizmetlerim</h1>
            <p class="text-slate-400 text-sm mt-1">
                Sitede yayınlanan tüm hizmetlerin listesi
            </p>
        </div>

        <a href="/Service/Create"
           class="px-6 py-3 bg-primary rounded-xl text-white font-bold
                  hover:opacity-90 transition shadow">
            + Yeni Hizmet
        </a>
    </div>

    <!-- GRID -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">

        @foreach (var item in Model)
        {
            <div class="bg-background-dark border border-white/10 rounded-2xl
                            overflow-hidden hover:border-primary/60 transition
                            flex flex-col">

                <!-- IMAGE -->
                <div class="h-40 bg-black/20">
                    <img src="@item.ImageURL"
                         alt="@item.Title"
                         class="w-full h-full object-cover" />
                </div>

                <!-- CONTENT -->
                <div class="p-6 flex-1 flex flex-col">
                    <h3 class="text-lg font-bold text-white mb-2">
                        @item.Title
                    </h3>

                    <p class="text-slate-400 text-sm leading-relaxed flex-1">
                        @item.Description
                    </p>

                    <!-- ACTIONS -->
                    <div class="flex gap-3 mt-6 pt-4 border-t border-white/10">
                        <a href="/Service/Update/@item.ServiceId"
                           class="flex-1 text-center py-2 rounded-lg
                                      bg-yellow-500/90 hover:bg-yellow-500
                                      text-black text-sm font-semibold transition">
                            Güncelle
                        </a>

                        <a href="/Service/Delete/@item.ServiceId"
                           onclick="return confirm('Bu hizmeti silmek istediğine emin misin?')"
                           class="flex-1 text-center py-2 rounded-lg
                                      bg-red-600/90 hover:bg-red-600
                                      text-white text-sm font-semibold transition">
                            Sil
                        </a>
                    </div>
                </div>

            </div>
        }

    </div>

</div>
