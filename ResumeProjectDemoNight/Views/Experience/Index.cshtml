@{
    ViewData["Title"] = "Deneyimler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">

        <!-- BAŞLIK -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Deneyimler</h3>
                <p class="text-slate-400 text-sm mt-1">
                    Portföyünüzde yer alan deneyimleri buradan yönetebilirsiniz.
                </p>
            </div>

            <a href="/Experience/Create/"
               class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white
                      px-5 py-2.5 rounded-xl font-bold text-sm transition-all
                      shadow-lg shadow-primary/30">

                <span class="material-symbols-outlined text-[22px]">
                    add
                </span>

                Yeni Deneyim Ekle
            </a>
        </div>

        <!-- === GLOW + KART WRAPPER === -->
        <div class="relative">

            <!-- ARKA PLAN IŞIK (GLOW) -->
            <div class="absolute inset-0 rounded-2xl
                        bg-primary/25 blur-2xl">
            </div>

            <!-- ASIL KART -->
            <div class="relative bg-card-dark rounded-2xl
                        border-2 border-primary
                        shadow-[0_0_0_3px_rgba(255,140,0,0.35),
                                0_0_40px_rgba(255,140,0,0.35)]
                        overflow-hidden transition-all duration-300
                        hover:shadow-[0_0_0_4px_rgba(255,140,0,0.45),
                                      0_0_60px_rgba(255,140,0,0.55)]">

                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">

                        <!-- TABLE HEAD -->
                        <thead>
                            <tr class="bg-slate-900/60">

                                <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">
                                    #
                                </th>

                                <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">
                                    Şirket
                                </th>

                                <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">
                                    Ünvan
                                </th>

                                <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">
                                    Çalışma Süresi
                                </th>

                                <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">
                                    Açıklama
                                </th>

                                <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider text-center">
                                    Sil
                                </th>

                                <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider text-center">
                                    Güncelle
                                </th>

                            </tr>
                        </thead>

                        <!-- TABLE BODY -->
                        <tbody class="divide-y divide-white/5">

                            @foreach (var item in Model)
                            {
                                <tr class="hover:bg-white/5 transition-colors">

                                    <td class="px-6 py-5 text-slate-300 font-semibold">
                                        @item.ExperienceId
                                    </td>

                                    <td class="px-6 py-5 text-white font-medium">
                                        @item.CompanyName
                                    </td>

                                    <td class="px-6 py-5 text-slate-300">
                                        @item.Title
                                    </td>

                                    <td class="px-6 py-5 text-slate-400">
                                        @item.WorkPeriodDate
                                    </td>

                                    <td class="px-6 py-5 text-slate-400 max-w-md truncate">
                                        @item.Description
                                    </td>

                                    <!-- SİL -->
                                    <td class="px-6 py-5 text-center">
                                        <a href="/Experience/Delete/@item.ExperienceId"
                                           class="inline-flex items-center justify-center
                                                      px-3 py-2 rounded-lg text-red-400
                                                      hover:bg-red-500/10 hover:text-red-300 transition">

                                            <span class="material-symbols-outlined text-[20px]">
                                                delete
                                            </span>
                                        </a>
                                    </td>

                                    <!-- GÜNCELLE -->
                                    <td class="px-6 py-5 text-center">
                                        <a href="/Experience/Update/@item.ExperienceId"
                                           class="inline-flex items-center justify-center
                                                      px-3 py-2 rounded-lg text-primary
                                                      hover:bg-primary/15 transition">

                                            <span class="material-symbols-outlined text-[20px]">
                                                edit
                                            </span>
                                        </a>
                                    </td>

                                </tr>
                            }

                        </tbody>

                    </table>
                </div>

                <!-- ALT BİLGİ -->
                <div class="px-6 py-4 bg-slate-900/40 flex items-center justify-between border-t border-white/5">

                    <span class="text-slate-500 text-xs font-medium">
                        Toplam <b class="text-white">@Model.Count</b> adet deneyim listeleniyor.
                    </span>

                    <div class="flex gap-2">
                        <button class="px-3 py-1.5 rounded-lg border border-white/10 text-slate-400 hover:text-white transition text-xs font-bold">
                            Önceki
                        </button>
                        <button class="px-3 py-1.5 rounded-lg border border-white/10 text-slate-400 hover:text-white transition text-xs font-bold">
                            Sonraki
                        </button>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>
