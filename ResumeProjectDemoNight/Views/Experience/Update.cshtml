@model ResumeProjectDemoNight.Entities.Experience

@{
    ViewData["Title"] = "Deneyim Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">

        <!-- BAŞLIK -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Deneyim Güncelle</h3>
                <p class="text-slate-400 text-sm mt-1">
                    Daha önce eklediğiniz deneyimi buradan düzenleyebilirsiniz.
                </p>
            </div>

            <a href="/Experience/ExperienceList/"
               class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white
                      px-5 py-2.5 rounded-xl font-bold text-sm transition-all">

                <span class="material-symbols-outlined text-[20px]">
                    arrow_back
                </span>

                Geri Dön
            </a>
        </div>

        <!-- 🔴 HATA MESAJI (EKLENEN TEK KISIM) -->
        @if (ViewBag.Error != null)
        {
            <div class="bg-red-500/10 border border-red-500/30 text-red-400 p-4 rounded-xl">
                @ViewBag.Error
            </div>
        }

        <!-- === GLOW + FORM KART === -->
        <div class="relative">

            <!-- TURUNCU IŞIK -->
            <div class="absolute inset-0 rounded-2xl bg-primary/25 blur-2xl"></div>

            <!-- ANA KART -->
            <div class="relative bg-card-dark rounded-2xl
                        border-2 border-primary
                        shadow-[0_0_0_3px_rgba(255,140,0,0.35),
                                0_0_40px_rgba(255,140,0,0.35)]
                        overflow-hidden">

                <div class="p-8">

                    <form method="post" class="space-y-6">

                        <!-- ID -->
                        <input type="hidden" asp-for="ExperienceId" />

                        <!-- ŞİRKET -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-300">
                                Şirket Adı <span class="text-red-400">*</span>
                            </label>

                            <div class="relative">
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500">
                                    business
                                </span>

                                <input asp-for="CompanyName"
                                       placeholder="Örn: Google, Microsoft"
                                       class="w-full pl-12 pr-4 py-3 rounded-xl
                                              bg-slate-900/50 border border-white/10
                                              text-white placeholder-slate-500
                                              focus:ring-2 focus:ring-primary outline-none transition"
                                       required />
                            </div>
                        </div>

                        <!-- ÜNVAN -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-300">
                                Pozisyon / Ünvan <span class="text-red-400">*</span>
                            </label>

                            <div class="relative">
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500">
                                    badge
                                </span>

                                <input asp-for="Title"
                                       placeholder="Örn: Kıdemli Yazılım Geliştirici"
                                       class="w-full pl-12 pr-4 py-3 rounded-xl
                                              bg-slate-900/50 border border-white/10
                                              text-white placeholder-slate-500
                                              focus:ring-2 focus:ring-primary outline-none transition"
                                       required />
                            </div>
                        </div>

                        <!-- ÇALIŞMA DÖNEMİ -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-300">
                                Çalışma Dönemi <span class="text-red-400">*</span>
                            </label>

                            <div class="relative">
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500">
                                    calendar_month
                                </span>

                                <input asp-for="WorkPeriodDate"
                                       placeholder="Örn: Ocak 2020 – Aralık 2023"
                                       class="w-full pl-12 pr-4 py-3 rounded-xl
                                              bg-slate-900/50 border border-white/10
                                              text-white placeholder-slate-500
                                              focus:ring-2 focus:ring-primary outline-none transition"
                                       required />
                            </div>

                            <p class="text-xs text-slate-500">
                                Örn: “Haziran 2021 – Devam Ediyor”
                            </p>
                        </div>

                        <!-- AÇIKLAMA -->
                        <div class="space-y-2">
                            <label class="block text-sm font-semibold text-slate-300">
                                Açıklama <span class="text-red-400">*</span>
                            </label>

                            <div class="relative">
                                <span class="absolute left-4 top-4 material-symbols-outlined text-slate-500">
                                    description
                                </span>

                                <textarea asp-for="Description"
                                          rows="6"
                                          placeholder="Yaptığınız işler, kullandığınız teknolojiler ve başarılarınız..."
                                          class="w-full pl-12 pr-4 py-3 rounded-xl
                                                 bg-slate-900/50 border border-white/10
                                                 text-white placeholder-slate-500 resize-none
                                                 focus:ring-2 focus:ring-primary outline-none transition"
                                          required></textarea>
                            </div>
                        </div>

                        <!-- BUTONLAR -->
                        <div class="flex gap-4 pt-6 border-t border-white/10">

                            <button type="submit"
                                    class="flex-1 flex items-center justify-center gap-2
                                           bg-primary hover:bg-primary/90 text-white
                                           px-6 py-3 rounded-xl font-bold transition
                                           shadow-lg shadow-primary/30">

                                <span class="material-symbols-outlined">save</span>
                                Güncellemeyi Kaydet
                            </button>

                            <a href="/Experience/ExperienceList/"
                               class="flex-1 flex items-center justify-center gap-2
                                      bg-slate-700 hover:bg-slate-600 text-white
                                      px-6 py-3 rounded-xl font-bold transition">

                                <span class="material-symbols-outlined">close</span>
                                Vazgeç
                            </a>

                        </div>

                    </form>

                </div>
            </div>
        </div>

        <!-- BİLGİ -->
        <div class="bg-blue-500/10 border border-blue-500/20 rounded-xl p-5">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-400 text-[26px]">
                    info
                </span>
                <div>
                    <h4 class="text-sm font-semibold text-blue-400 mb-1">
                        Bilgilendirme
                    </h4>
                    <p class="text-xs text-slate-400 leading-relaxed">
                        Güncel ve doğru bilgiler girmeniz, portföyünüzün profesyonel görünmesini sağlar.
                        Deneyim açıklamalarını sade ve net yazmanız önerilir.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>

