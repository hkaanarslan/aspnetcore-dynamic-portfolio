@model List<ResumeProjectDemoNight.Entities.Education>

@{
    ViewData["Title"] = "Eğitimler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">

        <!-- BAŞLIK -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Eğitim Bilgileri</h3>
                <p class="text-slate-400 text-sm mt-1">
                    Eğitim geçmişinizi buradan yönetebilirsiniz.
                </p>
            </div>

            <a href="/Education/Create"
               class="flex items-center gap-2 bg-primary hover:bg-primary/90
                      text-white px-5 py-2.5 rounded-xl font-bold
                      shadow-lg shadow-primary/30 transition">

                <span class="material-symbols-outlined">add</span>
                Yeni Eğitim Ekle
            </a>
        </div>

        <!-- TABLO KART -->
        <div class="relative">

            <!-- TURUNCU IŞIK -->
            <div class="absolute inset-0 bg-primary/25 blur-2xl rounded-2xl"></div>

            <!-- ANA KART -->
            <div class="relative bg-card-dark rounded-2xl
                        border-2 border-primary
                        shadow-[0_0_45px_rgba(255,140,0,0.45)]
                        overflow-hidden transition">

                <table class="w-full text-left border-collapse">

                    <thead class="bg-slate-900/60">
                        <tr>
                            <th class="px-6 py-4 text-xs text-slate-400 uppercase">#</th>
                            <th class="px-6 py-4 text-xs text-slate-400 uppercase">Okul</th>
                            <th class="px-6 py-4 text-xs text-slate-400 uppercase">Bölüm</th>
                            <th class="px-6 py-4 text-xs text-slate-400 uppercase">Tarih</th>
                            <th class="px-6 py-4 text-xs text-slate-400 uppercase">Açıklama</th>
                            <th class="px-6 py-4 text-xs text-slate-400 uppercase text-center">Sil</th>
                            <th class="px-6 py-4 text-xs text-slate-400 uppercase text-center">Güncelle</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-white/5">

                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-white/5 transition">

                                <td class="px-6 py-4">@item.EducationId</td>

                                <td class="px-6 py-4 text-white font-semibold">
                                    @item.SchoolName
                                </td>

                                <td class="px-6 py-4 text-slate-300">
                                    @item.Department
                                </td>

                                <td class="px-6 py-4 text-slate-400">
                                    @item.EducationDate
                                </td>

                                <td class="px-6 py-4 text-slate-400 truncate max-w-md">
                                    @item.Description
                                </td>

                                <td class="px-6 py-4 text-center">
                                    <a href="/Education/Delete/@item.EducationId"
                                       class="inline-flex p-2 rounded-lg text-red-400 hover:bg-red-500/10">
                                        <span class="material-symbols-outlined">delete</span>
                                    </a>
                                </td>

                                <td class="px-6 py-4 text-center">
                                    <a href="/Education/Update/@item.EducationId"
                                       class="inline-flex p-2 rounded-lg text-primary hover:bg-primary/15">
                                        <span class="material-symbols-outlined">edit</span>
                                    </a>
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>

