@model ResumeProjectDemoNight.Entities.About
@using ResumeProjectDemoNight.Context

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Title"] = "Hakkımda";

    ResumeContext context = new ResumeContext();
    var socialMedias = context.SocialMedias.ToList();
}

<div class="max-w-7xl mx-auto">

    <div class="mb-10">
        <h1 class="text-3xl font-bold text-white">Hakkımda</h1>
        <p class="text-slate-400 text-base mt-2">
            Ana sayfada görünen tüm bilgiler
        </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">

        <div class="admin-card p-10 text-center">

            <img src="@Model.ImageUrl"
                 class="w-44 h-44 mx-auto rounded-full object-cover
                        border-4 border-primary shadow-[0_0_30px_rgba(255,140,0,0.5)]" />

            <h2 class="text-white text-2xl font-bold mt-6">
                @Model.NameSurname
            </h2>

            <p class="text-primary mt-2 text-lg font-medium">
                @Model.Title
            </p>

        </div>

        <div class="lg:col-span-2 admin-card p-10">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <div>
                    <p class="text-slate-400 text-sm uppercase mb-2 font-semibold">
                        Değişen Yazılar
                    </p>
                    <p class="text-white text-base">
                        @Model.Description
                    </p>
                </div>

                <div>
                    <p class="text-slate-400 text-sm uppercase mb-2 font-semibold">
                        CV Dosyası
                    </p>

                    <a href="@Model.CvUrl"
                       target="_blank"
                       class="inline-flex items-center gap-2 mt-1
                              bg-primary px-6 py-3 rounded-xl
                              text-white text-base font-semibold hover:opacity-90 transition">

                        <span class="material-symbols-outlined text-[24px]">
                            download
                        </span>
                        CV İndir
                    </a>
                </div>

            </div>

            <div class="mt-8">
                <p class="text-slate-400 text-sm uppercase mb-2 font-semibold">
                    Hakkımda Yazısı
                </p>


                <p class="text-slate-200 text-base leading-relaxed">
                    @Model.AboutText
                </p>
            </div>

            <div class="mt-10 text-right">
                <a href="/About/Update/1"
                   class="inline-flex items-center gap-2
                          border border-primary text-primary
                          px-8 py-4 rounded-xl
                          hover:bg-primary hover:text-white transition font-bold text-lg">

                    <span class="material-symbols-outlined text-[24px]">
                        edit
                    </span>
                    Güncelle
                </a>
            </div>

        </div>

    </div>

    <div class="mt-12 admin-card p-10">

        <h2 class="text-xl font-bold text-white mb-8">
            Sosyal Medya Hesapları
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">

            @foreach (var item in socialMedias)
            {
                /* LINK GÜNCELLENDİ: Hepsi /About/Update/1 adresine gidiyor.
                KUTULAR BÜYÜTÜLDÜ: padding artırıldı, fontlar büyütüldü.
                */
                <a href="/About/Update/1" class="block group">
                    <div class="bg-background-dark border border-white/10 rounded-2xl p-6
                                    hover:border-primary/50 hover:bg-white/5 transition duration-300 h-full">

                        <p class="text-white text-lg font-semibold mb-2">
                            @item.SocialMediaId
                        </p>

                        <p class="text-slate-400 text-sm truncate opacity-70 group-hover:text-primary group-hover:opacity-100 transition">
                            @item.Url
                        </p>

                    </div>
                </a>
            }

        </div>

    </div>

</div>