@model ResumeProjectDemoNight.Entities.Statistic

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Title"] = "İstatistik Güncelle";
}

<div class="max-w-4xl mx-auto">

    <div class="admin-card p-8 border border-primary/40 rounded-3xl">

        <h1 class="text-2xl font-bold text-white mb-6">
            İstatistik Güncelle
        </h1>

        <form method="post" class="space-y-6">

            <input type="hidden" asp-for="StatisticId" />

            <div>
                <label class="text-slate-300 text-sm font-semibold mb-2 block">
                    Başlık
                </label>
                <input asp-for="Title"
                       class="w-full px-5 py-3 rounded-xl bg-background-dark border border-white/10 text-white focus:ring-2 focus:ring-primary outline-none" />
            </div>

            <div>
                <label class="text-slate-300 text-sm font-semibold mb-2 block">
                    Değer
                </label>
                <input asp-for="Value"
                       class="w-full px-5 py-3 rounded-xl bg-background-dark border border-white/10 text-white focus:ring-2 focus:ring-primary outline-none" />
            </div>

            <div>
                <label class="text-slate-300 text-sm font-semibold mb-2 block">
                    Icon (FontAwesome)
                </label>
                <input asp-for="Icon"
                       placeholder="fas fa-fire"
                       class="w-full px-5 py-3 rounded-xl bg-background-dark border border-white/10 text-white focus:ring-2 focus:ring-primary outline-none" />
            </div>

            <div class="pt-6 border-t border-white/10 flex justify-end gap-4">

                <a href="/Statistic/Index"
                   class="px-6 py-3 rounded-xl border border-white/20 text-slate-300 hover:bg-white/5 transition">
                    Geri Dön
                </a>

                <button type="submit"
                        class="px-8 py-3 rounded-xl bg-primary text-white font-bold hover:scale-[1.02] transition">
                    Güncelle
                </button>

            </div>

        </form>

    </div>

</div>
