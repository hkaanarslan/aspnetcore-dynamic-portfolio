<section id="about">

    <div class="container">

        <!-- section title -->
        <h2 class="section-title wow fadeInUp">Hakkımda</h2>

        <div class="spacer" data-height="60"></div>

        <div class="row">

            <div class="col-md-3">
                <div class="text-center text-md-left">
                    <!-- avatar image -->
                    <img src="@Model.AboutImageUrl"
                         alt="About Image"
                         class="img-fluid rounded-4 shadow"
                         style="width:260px; height:340px; object-fit:cover;" />


                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

            <div class="col-md-9 triangle-left-md triangle-top-sm">
                <div class="rounded bg-white shadow-dark padding-30">
                    <div class="row">

                        <!-- ABOUT TEXT -->
                        <div class="col-md-6">
                            <p>
                                @Model.AboutText
                            </p>

                            <div class="mt-3">
                                <a href="@Model.CvUrl"
                                   class="btn btn-default"
                                   download>
                                    CV İndir
                                </a>


                            </div>

                            <div class="spacer d-md-none d-lg-none" data-height="30"></div>
                        </div>

                        <!-- SKILLS -->
                        <div class="col-md-6">

                            @foreach (var skill in ViewBag.Skills)
                            {
                                <div class="skill-item">

                                    <div class="skill-info clearfix">
                                        <h4 class="float-left mb-3 mt-0">@skill.SkillName</h4>
                                        <span class="float-right">@skill.Value%</span>
                                    </div>

                                    <div class="progress">
                                        <div class="progress-bar data-background"
                                             role="progressbar"
                                             aria-valuemin="0"
                                             aria-valuemax="100"
                                             aria-valuenow="@skill.Value"
                                             data-color="#FFB042"
                                             style="width:@skill.Value%">
                                        </div>
                                    </div>

                                    <div class="spacer" data-height="20"></div>
                                </div>
                            }

                        </div>

                    </div>
                </div>
            </div>

        </div>
        <!-- row end -->

        <div class="spacer" data-height="70"></div>

        <!-- FACTS -->
        <div class="row">

            @foreach (var item in ViewBag.Statistics)
            {
                <div class="col-md-3 col-sm-6">

                    <div class="fact-item">
                        <span class="icon @item.Icon"></span>

                        <div class="details">
                            <h3 class="mb-0 mt-0 number">
                                <em class="count">@item.Value</em>
                            </h3>
                            <p class="mb-0">@item.Title</p>
                        </div>
                    </div>

                    <div class="spacer d-md-none d-lg-none" data-height="30"></div>

                </div>
            }

        </div>


    </div>

</section>
