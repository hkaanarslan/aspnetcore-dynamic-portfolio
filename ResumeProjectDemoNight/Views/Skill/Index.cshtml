@model List<ResumeProjectDemoNight.Entities.Skill>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    ViewData["Title"] = "Becerilerim";
}

<div class="max-w-7xl mx-auto">

    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-white">
            Becerilerim
        </h1>

        <a href="/Skill/Create"
           class="px-6 py-3 rounded-xl bg-primary text-white font-semibold hover:opacity-90 transition shadow-lg shadow-primary/30">
            + Yeni Beceri
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">

        @foreach (var item in Model)
        {
            <div class="admin-card p-6 border border-primary/40 rounded-2xl hover:border-primary transition">

                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-lg font-bold text-white">
                        @item.SkillName
                    </h3>

                    <span class="text-sm font-bold text-primary">
                        %@item.Value
                    </span>
                </div>

                <!-- Progress -->
                <div class="w-full h-2 bg-white/10 rounded-full overflow-hidden mb-6">
                    <div class="h-2 bg-primary rounded-full"
                         style="width:@item.Value%">
                    </div>
                </div>

                <div class="flex justify-between gap-3">

                    <a href="/Skill/Update/@item.SkillId"
                       class="flex-1 text-center py-2 rounded-lg bg-white/5 border border-white/10 text-white hover:bg-primary hover:border-primary transition">
                        Güncelle
                    </a>

                    <a href="/Skill/Delete/@item.SkillId"
                       onclick="return confirm('Bu beceriyi silmek istiyor musunuz?')"
                       class="flex-1 text-center py-2 rounded-lg bg-red-500/10 border border-red-500/40 text-red-400 hover:bg-red-500 hover:text-white transition">
                        Sil
                    </a>

                </div>

            </div>
        }

    </div>

</div>
